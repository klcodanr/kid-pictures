#set($ex='.html')
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>Sarah Picture of the Day | All</title>
		<link rel="stylesheet" href="css/styles.css" />
		<link rel="stylesheet" href="css/jquery.lightbox-0.5.css" />
		<script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
		<script type="text/javascript" src="js/jquery.lightbox-0.5.js"></script>
		<script type="text/javascript" src="js/script.js"></script>
		<link rel="icon" href="images/favicon.png" type="image/x-icon" />
		<link rel="shortcut icon" href="images/favicon.png" type="image/x-icon" />
		<link rel="shortcut icon" href="images/favicon.png" type="image/vnd.microsoft.icon" />
	</head>
	<body>
		<div id="surround">
			<div id="header" class="box">
				<a href="./"><img src="images/sarah-header.png" /></a>
				<h1>Sarah Pictures of the Day</h1>
			</div>
			<ul id="nav" class="box">
				<li><a href="index.html">Home</a></li>
				<li><a href="all.html">View All</a></li>
			</ul>
			<div id="message" class="box">
				<ul id="messages">
					#set( $velocityCount = 1 )
					#foreach( $message in $messages )
						#set( $index = $messages.size() - $velocityCount )
						#set( $emailMessage = $messages.get($index) )
						<li class="item">
							<div class="subheader box">
								<h3><a href="$dateTool.format('yyyy-MM-dd-HH-mm-ss',$message.sentDate)$ex">From $emailMessage.sender on $dateTool.format('MMM d, yyyy',$emailMessage.sentDate)</a></h3>
							</div>
							<div class="message box">
								$emailMessage.message
							</div>
							#if($emailMessage.attachments.size() > 0)
								<ul class="images box">
									#foreach( $attachment in $emailMessage.attachments )
										<li>
											<a href="$dateTool.format('yyyy-MM-dd-HH-mm-ss',$emailMessage.sentDate)/$attachment.name">
												<img src="$dateTool.format('yyyy-MM-dd-HH-mm-ss',$emailMessage.sentDate)/thumbnail-$attachment.name" />
											</a>
										</li>
									#end
								</ul>
							#end
						</li>
					#end
				</ul>
			</div>
			<div id="footer" class="box">
				<p>
					Copyright &copy; 2012, by Daniel & Tricia Klco. All rights reserved.<br/>
					Text, graphics, and HTML code are protected by US and International Copyright Laws, and may not be copied, reprinted, published, translated, hosted, or otherwise distributed by any means without explicit permission.
				</p>
			</div>
		</div>
	</body>
</html>
