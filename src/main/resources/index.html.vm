		<script type="text/javascript" src="js/jquery.lightbox-0.5.js"></script>
		<script type="text/javascript" src="js/script.js"></script>
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-37209568-2']);
			_gaq.push(['_trackPageview']);
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
	</head>
	<body>
		<div class="container">
			<div class="fifteen columns content">
				<div id="header" class="box">
					<a href="./"><img src="images/sarah-header.png" /></a>
					<h3>Sarah Pictures of the Day</h3>
				</div>
				<ul id="nav" class="box">
					<li><a href="index.html">Home</a></li>
					<li><a href="all.html">View All</a></li>
					<li><a href="slideshows.html">Slideshow</a></li>
				</ul>
				<div id="message" class="box">
					#set($month = '')
					<ul id="messages">
						#foreach( $message in $messages )
							#set($thisMonth = $date.format('MMMM',$message.sentDate))
							#set($thisYear = $date.format('yyyy',$message.sentDate))
							#if($month != $thisMonth)
								<li>
									<h3>$thisMonth $thisYear</h3>
								</li>
								#set($month = $thisMonth)
							#end
							<li><a href="$date.format('yyyy-MM-dd-HH-mm-ss',$message.sentDate)$ex">From $message.sender on $date.format('MMM d, yyyy',$message.sentDate)</a></li>
						#end
					</ul>
				</div>
