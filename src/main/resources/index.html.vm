#set($ex='.html')
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>Sarah Picture of the Day | Home</title>
		<link rel="stylesheet" href="css/styles.css" />
		<link rel="stylesheet" href="css/jquery.lightbox-0.5.css" />
		<script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
		<script type="text/javascript" src="js/jquery.lightbox-0.5.js"></script>
		<script type="text/javascript" src="js/script.js"></script>
		<link rel="icon" href="images/favicon.png" type="image/x-icon" />
		<link rel="shortcut icon" href="images/favicon.png" type="image/x-icon" />
		<link rel="shortcut icon" href="images/favicon.png" type="image/vnd.microsoft.icon" />
	</head>
	<body>
		<div id="surround">
			<div id="header" class="box">
				<a href="./"><img src="images/sarah-header.png" /></a>
				<h1>Sarah Pictures of the Day</h1>
			</div>
			<ul id="nav" class="box">
				<li><a href="index.html">Home</a></li>
				<li><a href="all.html">View All</a></li>
			</ul>
			<div id="message" class="box">
				#set($month = '')
				<ul id="messages">
					#foreach( $message in $messages )
						#set($thisMonth = $dateTool.format('MMMM',$message.sentDate))
						#if($month != $thisMonth)
							<li>
								<h3>$thisMonth</h3>
							</li>
							#set($month = $thisMonth)
						#end
					   <li><a href="$dateTool.format('yyyy-MM-dd-HH-mm-ss',$message.sentDate)$ex">From $message.sender on $dateTool.format('MMM d, yyyy',$message.sentDate)</a></li>
					#end
				</ul>
			</div>
			<div id="footer" class="box">
				<p>
